<%= render 'layouts/header' %>

<%= render 'add_task_form' %>

<hr>

<%= render 'task_controls', query: @query %>

<div class='container'>
  <table class='table'>
    <tr>
      <th>Task</th><th>Date Completed</th>
    </tr>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.done_at.strftime('%F at %H:%M UTC') %></td>
        <td><%= render 'delete_task', task: task %></td>
      </tr>
    <% end %>
  </table>
</div>
